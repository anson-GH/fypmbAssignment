<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_seller_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.winnie.fypmbassignment.Profile.ProfileViewActivity">

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_padding">
            <!-- android:background="@color/light"
             android:layout_weight="1"-->
            <!--<LinearLayout-->
            <!--android:orientation="vertical"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--&gt;-->

            <com.example.winnie.fypassignment.CircleImageView
                android:id="@+id/imageProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/usersprofi"
                app:civ_border_color="@color/dark"
                app:civ_border_width="1dp" />


            <TextView
                android:id="@+id/etName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:text="Username"
                android:textStyle="bold"
                android:background="@null"
                android:textSize="16dp" />


            <!--</LinearLayout>-->

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
           >
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="30dp"
           android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/ivSelling"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_price_tag">
            </ImageView>
            <TextView
                android:id="@+id/textSelling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_marginTop="100dp"
                android:text="Selling">
            </TextView>
       </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivReport"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_folder">
            </ImageView>
            <TextView
                android:id="@+id/textReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
            android:layout_marginTop="100dp"
                android:textSize="16dp"
                android:text="Report">
            </TextView>
</RelativeLayout>
        </LinearLayout>






    </LinearLayout>
</RelativeLayout>

