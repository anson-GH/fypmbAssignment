<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.winnie.fypmbassignment.Profile.ProfileViewActivity">

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_padding">
            <!-- android:background="@color/light"
             android:layout_weight="1"-->
            <!--<LinearLayout-->
                <!--android:orientation="vertical"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--&gt;-->

            <com.example.winnie.fypassignment.CircleImageView
                android:id="@+id/imageProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/usersprofi"
                app:civ_border_color="@color/dark"
                app:civ_border_width="1dp" />


            <TextView
                android:id="@+id/etName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:text="Username"
                android:textStyle="bold"
                android:background="@null"
                android:textSize="16dp" />


            <!--</LinearLayout>-->

        </RelativeLayout>



        <TextView
            android:id="@+id/etFaculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/bankbuilding"
            android:drawablePadding="10dp"
            android:text="Faculty"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/etProgramme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/openxview"
            android:drawablePadding="10dp"
            android:text="Programme"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/etRedemption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/gift"
            android:drawablePadding="10dp"
            android:text="Redemption Point"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:textSize="16dp" />

        <TextView
            android:text="PRIVATE INFORMATION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/textView"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/etContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/phonexreceiver"
            android:drawablePadding="10dp"
            android:ems="10"
            android:text="Contact number"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/homexpage"
            android:drawablePadding="10dp"
            android:text="Home address"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/placeholder"
            android:drawablePadding="10dp"
            android:text="Current city"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/etGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/malexfemale"
            android:drawablePadding="10dp"
            android:text="Gender"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/etIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/idxcard"
            android:drawablePadding="10dp"
            android:text="NRIC number"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:textSize="16dp" />
    </LinearLayout>
</RelativeLayout>

