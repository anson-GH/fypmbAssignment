<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_friend_profile_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.winnie.fypmbassignment.FriendProfileViewActivity">



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#fff">


            <!-- Cover Image -->

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:scaleType="fitXY"
                android:src="@drawable/banner1" />



            <!-- Round image -->

            <com.alexzh.circleimageview.CircleImageView
                android:id="@+id/banar1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/pro2"
                android:layout_marginTop="75dp"
                android:layout_gravity="center"
                app:view_borderWidth="2dp"
                app:view_borderColor="#cccccc" />


        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User name"
                android:textSize="22dp"
                android:textColor="@color/title_color"
                android:id="@+id/txtName"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:layout_gravity="center"
                android:textColor="@color/title_color"
                android:id="@+id/txtPosition"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--------"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Studied in ...."
                android:id="@+id/txtCourse"
                android:textSize="14dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCity"
                android:text="........."
                android:textSize="14dp"
                android:layout_gravity="center"/>



        </LinearLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/btaddfriend"
            android:text="ADD FRIEND"
            android:textColor="@color/edit_profile"
            android:textAlignment="center"
            android:background="@drawable/rounded"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:visibility="visible"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/btcancelfriend"
            android:text="CANCEL FRIEND"
            android:textColor="@color/edit_profile"
            android:textAlignment="center"
            android:background="@drawable/rounded"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:visibility="gone"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ACACAC"
            android:layout_marginTop="40dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ACACAC" />


    </LinearLayout>



</ScrollView>


</RelativeLayout>



